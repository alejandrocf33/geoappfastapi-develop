    "colocacion": "Prueba",
    "puntos": [
        {"longitud": -74.0617, "latitud": 4.6737},
        {"longitud": -74.0618, "latitud": 4.6738},
        {"longitud": -74.0619, "latitud": 4.6739}
    ]
}

